generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id                       Int        @id @default(autoincrement())
  first_name               String?
  googleId                 String?
  last_name                String?
  middle_name              String?
  email                    String?    @unique
  password                 String?
  name                     String?
  role                     String     @default("user")
  verification_code        String?
  verified_status          Boolean?   @default(false)
  verification_expire_time DateTime?
  country                  String?
  country_tag              String?
  phone_number             String?    @unique
  last_login               DateTime? // Assuming this is a timestamp of the last login
  createdAt                DateTime   @default(now()) // This adds a createdAt timestamp
  updatedAt                DateTime   @updatedAt // This adds an updatedAt timestamp
  chatRooms                ChatRoom[]
  messages                 Message[]
}

model ChatRoom {
  id           Int       @id @default(autoincrement())
  name         String
  participants Users[] // Define the relationship to Users
  messages     Message[]
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model Message {
  message_id Int      @id @default(autoincrement())
  content    String
  timestamp  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  roomId     Int
  senderId   Int
  sender     Users    @relation(fields: [senderId], references: [id]) // Correct the field name
  room       ChatRoom @relation(fields: [roomId], references: [id]) // Correct the field name
}
